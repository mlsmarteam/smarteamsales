<% provide(:title, 'New') %>
<h1>New turn</h1>

<div class="row">
  	<div class="col-md-6 col-md-offset-3">
  		<%= form_for(@turn) do |f| %>
	  		<%= f.label :check_in %>
	  		<%= f.date_field :check_in %>

	  		<%= f.label :check_out %>
	  		<%= f.date_field :check_out %>
	  	  	<%= f.submit "Create turn", class: "btn btn-primary" %>
  		<% end %>
  	</div>
</div>