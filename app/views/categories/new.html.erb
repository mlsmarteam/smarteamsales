<% provide(:title, 'New') %>
<h1>New category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for(@category) do |f| %>
  	<%= render 'shared/error_messages', object: f.object %>
  	<%= f.label :name %>
  	<%= f.text_field :name %>

  	<%= f.submit "Create category", class: "btn btn-primary" %>
  	<% end %>
  </div>
</div>